<Window x:Class="Lab4.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4.View"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800"
        Background="#333" Closed="Window_Closed">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Справочники">
                <MenuItem Header="Поставщики" Name="Suppliers" Click="Suppliers_Click"></MenuItem>
                <MenuItem Header="Товары" Name="Products" Click="Products_Click"></MenuItem>
                <Separator />
                <MenuItem Header="Выход" Click="MenuItem_Click" ></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
